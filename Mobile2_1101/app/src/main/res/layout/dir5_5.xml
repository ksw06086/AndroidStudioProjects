<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <EditText
            android:layout_span="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_span="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:rowCount="2"
        android:columnCount="5">
        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="0"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="1"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="2"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="3"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="4"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="5"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="6"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="7"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="8"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="9"/>
    </GridLayout>

        <Button
            android:id="@+id/plus"
            android:layout_span="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="더하기"/>

        <Button
            android:id="@+id/sub"
            android:layout_span="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="빼기"/>
        <Button
            android:id="@+id/mul"
            android:layout_span="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="곱하기"/>
        <Button
            android:id="@+id/dev"
            android:layout_span="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나누기"/>

        <TextView
            android:id="@+id/textview"
            android:layout_span="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계산결과 : "
            android:textSize="20dp"
            android:textColor="#ff0000"/>
</LinearLayout>